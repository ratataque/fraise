version: '3'

services:
  frontend:
    image: fraisefront
    build:
      context: ..
      dockerfile: DockerfileFront
    volumes:
        - '../frontend/src:/fraise/frontend/src'
    ports:
        - 3000:3000
    environment:
        - CHOKIDAR_USEPOLLING=true   
        - WATCHPACK_POLLING=true
      
  backend:
    image: fraise
    build:
        context: ..
        dockerfile: Dockerfile
    volumes:
        - '../backend:/fraise/backend'
    ports:
        - 8000:8000
    depends_on:
        - db
        
  db:
    image: postgres:13
    volumes:
        - ../backend/postgres_data:/var/lib/postgresql/data/
    environment:
        - POSTGRES_DB=fraise
        - POSTGRES_USER=fraise
        - POSTGRES_PASSWORD=fraise
    ports:
        - 5432:5432
    expose:
      - 5432
    networks:
      - default
        
volumes:
    postgres_data: